{
    "version": "1.0", 
    "manifest_version": 2, 
    "name": "Meet Party",  
    "description": "Celebrate with friends on Google Meet", 
    "author": "Ananya",

    "background": 
    {
        "scripts": ["background.js"]
    },

    "content_scripts": [  
        {
          "matches": ["https://meet.google.com/*"],
          "css": ["styles.css"],
          "js" : ["contentScript.js"]
        }
      ],
      "permissions": [
        "activeTab",
        "tabs",
        "*://*/*"
      ],
      "web_accessible_resources": [
        "assets/*"
      ],
      "browser_action": {
        "default_icon": {
          "16": "assets/iconp.png",
          "48": "assets/iconp.png"
        },
        "default_popup": "popup.html"
    },
    "icons": { 
     "128": "/assets/iconf.png" }
}