{
    "version": "1.0", 
    "manifest_version": 2, 
    "name": "Meet Party",  
    "description": "Celebrate with friends on Google Meet", 
    "author": "Ananya",

    "background": 
    {
        "scripts": ["background.js"]
    },

    "content_scripts": [  
        {
          "matches": ["https://meet.google.com/*"],
          "css": ["styles.css"],
          "js" : ["contentScript.js"]
        }
      ],
      "permissions": [
        "activeTab"
      ],
      "web_accessible_resources": [
        "assets/*"
      ],
      "browser_action": {
        "default_popup": "popup.html"
    }
}